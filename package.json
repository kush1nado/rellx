{
  "name": "rellx-monorepo",
  "version": "2.0.1",
  "private": true,
  "description": "Rellx State Manager - Monorepo",
  "author": "kush1nado",
  "license": "Apache-2.0",
  "workspaces": [
    "rellx-core",
    "rellx-devtools",
    "rellx-devtools/devtools-ui"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:devtools",
    "build:core": "npm run build --workspace=rellx-core",
    "build:devtools": "npm run build --workspace=rellx-devtools",
    "test": "npm run test:core && npm run test:devtools",
    "test:core": "node node_modules/jest/bin/jest.js --config rellx-core/jest.config.cjs --rootDir rellx-core --testPathIgnorePatterns=node_modules",
    "test:devtools": "node node_modules/jest/bin/jest.js --config rellx-devtools/jest.config.cjs --rootDir rellx-devtools --testPathIgnorePatterns=node_modules",
    "clean": "npm run clean --workspaces --if-present || true",
    "lint": "eslint \"rellx-core/src/**/*.{ts,js}\" \"rellx-devtools/src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"rellx-core/src/**/*.{ts,js}\" \"rellx-devtools/src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "version": "node rellx-devtools/scripts/version.js",
    "size": "node scripts/analyze-size.js"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.0.0",
    "@jest/test-sequencer": "^29.7.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "@rollup/plugin-terser": "^0.4.4",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "rellx-devtools-ui": {
      "typescript": "^4.9.5"
    },
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0"
  }
}

